.main
  width:100%
  margin-top:50px
  padding-top:15px
  .head
    height: 25px
    position: relative
    h3
      width: 90%
      height: 25px
      line-height: 25px
      margin: 0 auto
      text-align: center
      color: #5e5e5e
      font-size: 16px
      font-weight: normal
      border-bottom: 1px solid #fff
  .logBox
    width: 90%
    margin: 0 auto
    padding-top:10px
    p
      width: 100%
      height: 35px
      margin: 0 auto
      border: 1px solid #bdbdbd
      margin-bottom: 15px
      clear: both
      box-sizing: border-box
      position:relative
      .span_error
        position:absolute
        display:block
        height:33px
        line-height:35px
        color:#f00
        left:68px
        background:#fff
        width:75%
        font-size:14px
      label
        width: 68px
        height: 35px
        line-height: 35px
        text-align: center
        font-size: 14px
        color: #666
        float: left
      input
        width: 75%
        height: 33px
        padding: 0 0
        font-size: 14px
        background: none
        outline: none
        float: left
    p.pWarn
      height: 30px
      line-height: 30px
      font-size: 14px
      color: #ff7e00
      border: none
      margin-bottom: 0px
    p.pErr
      border: 1px solid #fb460e
    .validate
      p
        width: 60%
        float: left
        input
          width:60%
      img,button
        width: 98px
        height: 33px
        border: 1px solid #bdbdbd
        float: right
      button
        background: #569ffb
        border: 1px solid #569ffb
        color:#fff
    p.pBtn
      width: 100%
      height: 40px
      margin: 0 auto
      clear: both
      border:none
      a
        width: 100%
        height: 40px
        line-height: 40px
        text-align: center
        display: block
        font-size: 18px
        color: #fff
        background: #569ffb
    .pCheck
      height: 16px
      border:none

      span
        height: 18px
        line-height: 18px
        padding-left: 18px
        font-size: 12px
        color: #666
        background: url(./../../common/image/check.gif) no-repeat
        background-size: 15px 36px
        float: left
      span.sOn
        background-position: 0 -18px
      .aX
        float: left
        line-height: 18px
      a
        font-size: 12px
        color: #249bf3
      a.aReg
        float: left
      a.aFor
        float: right
    .pA
      height: 40px
      margin-top:15px
      text-align: center
      a
        display: block
        font-size: 14px
        color: #249bf3
